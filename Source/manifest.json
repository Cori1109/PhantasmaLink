{
	"name": "Phantasma Link",
	"version": "0.1",
	"description": "Allows web applications to sign Phantasma transactions.",
	"permissions": ["activeTab", "declarativeContent", "storage", "tabs"],
	"options_page": "options.html",
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"css": ["phantasma.css"],
		"js": ["injector.js"]		
	}],
	"web_accessible_resources": ["phantasma.js"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
	"default_popup": "popup.html",
	"default_icon": {
	  "16": "img/phant16.png",
	  "32": "img/phant32.png",
	  "48": "img/phant48.png",
	  "128": "img/phant128.png"
	}
	},
	"icons": {
	"16": "img/phant16.png",
	"32": "img/phant32.png",
	"48": "img/phant48.png",
	"128": "img/phant128.png"
	},
	"manifest_version": 2
}
